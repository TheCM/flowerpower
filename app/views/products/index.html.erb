<h1>Kwiaty dostępne w kwiaciarni</h1>

<table class="table-products">
    <tr>
      <th>Wygląd</th>
      <th>Kwiat</th>
      <th>Cena</th>
      <th>Opis</th>
      <th colspan="4"></th>
    </tr>
</table>

<% @products.each do |product| %>
    <%= form_tag(order_item_new_path) do %>
      <table class="table-products">
        <tr>
          <% if product.name != "Bukiet" %>
            <td>
              <img src="<%= image_path(product.name + ".jpg") %>" alt="<%=product.name%>" class="flower_image" width="300px"/> 
              <%= hidden_field_tag('product', product.id) %>
            </td>
            <td> <%= product.name %> </td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
            <td>
              <div id = "div<%= product.id %>">
                <%=label_tag(:quantity_label, "Ilość") %>
                <%=number_field(:quantity, nil, in: 1..100, id: 'product' + product.id.to_s, value: "1")  %>
              </div>
            </td>
            <td><%= link_to 'Szczegóły  ', product %></td>
            <td>
              <%= submit_tag("Dodaj do koszyka!") %>
            </td>
        </tr>
      </table>
    <% end %>
  <% end %>
<% end %>

<br>
<hr>
<p> <%= link_to "Zaloguj się jako pracownik", new_user_session_path %> </p>
