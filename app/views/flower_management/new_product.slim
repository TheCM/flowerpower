h1 New Product


= form_tag(flower_management_create_product_path, multipart: true) do

  div class="field"
    = label_tag :nazwa
    = text_field_tag 'product[name]'
  br

  div class="field"
    = label_tag :cena
    = number_field_tag 'product[price]', 0.01, min: 0.01, max: 1000, step: 0.01
  br

  div class="field"
    = label_tag :opis
    = text_area_tag 'product[description]'
  br

  div class="field"
    = label_tag :zdjęcie
    = file_field_tag 'product[image]', :accept => 'image/png,image/jpg'
  br

  div class="actions"
    = submit_tag 'Zapisz'


= link_to 'Powrót', flower_management_main_menu_path
