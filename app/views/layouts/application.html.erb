<!DOCTYPE html>
<html>
  <head>
    <title>Kwiaciarnia</title>
    <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
      <% if current_user  %>
        <p> Witaj, <%= current_user.email %>!
        <%= link_to "Panel użytkownika", user_user_panel_path %>
        </p>
      <% end %>
      <h1> <%= link_to "Strona główna", root_url %> </h1>
      <h2> <%= link_to "Oferta kwiaciarni", products_path %> </h1>
      <p> <%= link_to "Twój koszyk", cart_show_path %> </p>
      <p> <%= link_to "Flower Bunch!", flower_bunch_application_path %> </p>
      <p> <%= link_to "Panel administratora", user_admin_panel_path %> </p>
      <hr>

      <p class="notice" id="notice"> <%= notice %> </p>
      <p class="alert" > <%= alert %> </p>
      <%= yield %>
  </body>
</html>

